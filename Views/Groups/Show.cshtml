@*
    view-ul pentru show-ul unui grup
*@

@model Connectify.Models.Group

<div class="card">
    <div class="card-header">
        <h3>@Model.GroupName</h3>
    </div>

@*Butoane de edit si delete pentru fiecare grup*@
    <div class="card-body">
        <p>@Model.Description</p>
        <a class="btn btn-primary" asp-action="Edit" asp-controller="Groups" asp-route-id="@Model.Id">Edit</a>
        <form asp-action="Delete" asp-controller="Groups" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this group?');">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>

    </div>

</div>

@*afisarea mesajelor dintr-un grup, cu butoane de edit si de delete*@
<div class="card">
    <div class="card-header">
        <h3>All Messages</h3>
    </div>
    <div class="card-body">
        @foreach (var message in Model.Messages)
        {
            @if (message.TextMessage != null)
            {
                <div class="card">
                    <div class="card-body">
                        <p>@message.TextMessage</p>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="Messages" asp-route-id="@message.Id">Edit</a>
                        <br />
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Messages" asp-route-id="@message.Id">Delete</a>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <p>There are no messages in this group</p>
                    </div>
                </div>
            }
        }
    </div>
