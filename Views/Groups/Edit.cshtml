@model Connectify.Models.Group

@*Afisarea unui grup*@

<h2>Edit your group</h2>
<br />

<form asp-action="Edit" asp-controller="Groups" method="post">
    <input type="hidden" asp-for="Id" />
    <label asp-for="GroupName">Group name:</label>
    <input asp-for="GroupName" class="form-control" />
    <span asp-validation-for="GroupName" class="text-danger"></span>
    <br />
    <label asp-for="Description">Description:</label>
    <textarea asp-for="Description" class="form-control"></textarea> />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Save</button>
    <a href="/Groups/Show" class="btn btn-secondary">Cancel</a>"
</form>
