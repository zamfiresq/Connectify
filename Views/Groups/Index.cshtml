@{
    ViewBag.GroupName = "All groups";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Groups</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .group-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            margin-bottom: 20px;
            overflow: hidden;
        }

        .group-card-body {
            padding: 15px;
        }

        .group-title {
            font-size: 1.2rem;
            font-weight: bold;
        }

        .group-description {
            color: #555;
        }

        .btn-view-group {
            background-color: #007bff;
            color: white;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="mb-4">@ViewBag.GroupName</h2>

        <!-- Grupuri afisate ca carduri -->
        <div class="row">
            @foreach (var group in ViewBag.Groups)
            {
                <div class="col-md-6 mx-auto">
                    <div class="group-card bg-white">
                        <div class="group-card-body">
                            <div class="group-title">@group.GroupName</div>
                            <p class="group-description">@group.Description</p>
                            <a href="@Url.Action("Show", "Groups", new { id = group.Id })" class="btn btn-view-group btn-sm">View Group</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Buton pentru a crea un grup nou -->
        <div class="text-center mt-4">
            <a href="@Url.Action("New", "Groups")" class="btn btn-success btn-lg">Create a new group</a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
