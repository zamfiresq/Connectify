<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Connectify</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Flexbox to make the footer stick to the bottom */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex-grow: 1; /* Make the main content take up all available space */
            padding-top: 20px; /* Adjust the value according to the height of your fixed header */
        }

        .site-header {
            background-color: #343a40;
            color: white;
            padding: 1rem;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1030;
        }

        .site-footer {
            background-color: #f8f9fa;
            padding: 1rem;
            border-top: 1px solid #dee2e6;
            text-align: center;
            margin-top: auto; /* Push the footer to the bottom of the page */
            width: 100%; /* Ensure it spans the full width */
        }
    </style>
</head>
<body>
    <header class="site-header d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0">
            <a href="/Posts/Index" class="text-light text-decoration-none">Connectify</a>
        </h1>
        <nav>
            <a href="/" class="text-light me-3">Home</a>
            <a href="/Privacy" class="text-light me-3">Privacy</a>
            <a href="/Login" class="text-light">Login</a>
        </nav>
    </header>


    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <p>&copy; 2024 Connectify. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
