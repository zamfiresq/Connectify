<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Connectify</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .post-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 1.5rem;
            border-radius: 10px;
            overflow: hidden;
            background-color: #ffffff;
        }

        .post-card-header {
            background-color: #e3f2fd;
            padding: 1rem;
            border-bottom: 1px solid #bbdefb;
        }

        #searchResults {
            position: absolute;
            top: calc(100% + 10px); /* Positions it just below the search bar with a 10px gap */
            left: 0;
            right: 0;
            z-index: 1000; /* Ensures it stays above other elements */
            margin-top: 0; /* Removes any unnecessary margin */
            max-height: 300px; /* Limits height for better UX */
            overflow-y: auto; /* Enables scrolling for long results */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional: Adds a shadow for visibility */
            background-color: white; /* Ensures it stands out */
            border: 1px solid #ccc; /* Adds a subtle border */
        }


        .post-card-body {
            padding: 1rem;
        }

        .post-actions {
            display: flex;
            justify-content: flex-start;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
        }

        .post-footer {
            background-color: #f1f8e9;
            padding: 0.5rem 1rem;
            border-top: 1px solid #c5e1a5;
        }

        .btn-primary {
            background-color: #64b5f6;
            border-color: #64b5f6;
        }

        .btn-warning {
            background-color: #ffb74d;
            border-color: #ffb74d;
        }

        .btn-success {
            background-color: #81c784;
            border-color: #81c784;
        }

        a.nav-link {
            color: #706d6d !important;
        }

        .navbar-nav .nav-item .nav-link {
            color: #706d6d;
        }
    </style>
</head>
<body>
    <header class="site-header navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Posts/Index">Connectify</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Posts/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Posts/Create">Add Post</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Groups/Index">Groups</a>
                    </li>
                </ul>

                <!-- Search Bar -->
                <form class="d-flex position-relative" style="flex-grow: 1; max-width: 300px;">
                    <input id="searchInput" class="form-control me-2" type="search" placeholder="Search users..." aria-label="Search">
                    
                    <!-- Suggestions Container --> 
                    <div id="searchResults" class="position-absolute bg-white border mt-1" style="z-index: 1000; width: 100%; display: none;"></div>
                </form>

                <div class="d-flex">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </header>


    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <p>&copy; 2024 Connectify. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Search Script -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const searchResults = document.getElementById("searchResults");

            searchInput.addEventListener("input", function () {
                const query = this.value.trim();
                if (query.length < 2) {
                    searchResults.style.display = "none";
                    searchResults.innerHTML = "";
                    return;
                }

                fetch(`/ApplicationUser/Search?query=${encodeURIComponent(query)}`, {
                    headers: {
                        "X-Requested-With": "XMLHttpRequest"
                    }
                })
                .then(response => response.text())
                .then(html => {
                    searchResults.innerHTML = html;
                    searchResults.style.display = "block";
                })
                .catch(error => console.error("Error fetching search results:", error));
            });

            document.addEventListener("click", function (event) {
                if (!searchResults.contains(event.target) && event.target !== searchInput) {
                    searchResults.style.display = "none";
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
