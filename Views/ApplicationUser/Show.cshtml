@model Connectify.Models.ApplicationUser

@{
    ViewData["Title"] = "User Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.FirstName @Model.LastName's Profile</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
    </style>
</head>
<body>
    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@Model.FirstName @Model.LastName's Profile</h2>
        </div>

        <div class="row">
            <!-- card profil -->
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <img src="https://via.placeholder.com/150" alt="Profile Picture" class="rounded-circle mb-3" width="150" height="150">
                            <h4 class="card-title">@Model.UserName</h4>
                        </div>
                        <div class="mb-3">
                            <strong>Bio:</strong>
                            <p>@(Model.Bio ?? "This user has no bio.")</p>
                        </div>
                        <div class="mb-3">
                            <strong>Profile Status:</strong>
                            <p class="badge @(Model.IsPrivate ? "bg-danger" : "bg-success")">
                                @(Model.IsPrivate ? "Private" : "Public")
                            </p>
                        </div>
                        <div class="mb-3">
                            <strong>Followers:</strong> @ViewBag.FollowersCount<br />
                            <strong>Following:</strong> @ViewBag.FollowingCount
                        </div>

                        <div class="text-center">
                            @if (ViewBag.IsCurrentUser)
                            {
                                <a href="@Url.Action("Edit", "ApplicationUser", new { id = Model.Id })" class="btn btn-primary">Edit Profile</a>
                            }
                            else
                            {
                                @if (ViewBag.IsFollowing)
                                {
                                    <form method="post" asp-action="Unfollow" asp-controller="ApplicationUser" class="d-inline">
                                        <input type="hidden" name="receiverId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-secondary">Unfollow</button>
                                    </form>
                                }
                                else if (ViewBag.IsPending)
                                {
                                    <button class="btn btn-warning" disabled>Pending Approval</button>
                                }
                                else
                                {
                                    <form method="post" asp-action="SendFollowRequest" asp-controller="ApplicationUser" class="d-inline">
                                        <input type="hidden" name="receiverId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-primary">Follow</button>
                                    </form>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- sectiune de postari -->
        @if (!Model.IsPrivate || User.IsInRole("Admin") || Model.Id == ViewBag.CurrentUserId)
        {
            <div class="mt-4">
                <h3>Posts</h3>
                @if (Model.Posts != null && Model.Posts.Any())
                {
                    <div class="row">
                        @foreach (var post in Model.Posts.OrderByDescending(p => p.PostedAt))
                        {
                            <div class="col-md-8">
                                <div class="post-card">
                                    <div class="post-card-header d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">
                                            Posted by
                                            @if (post.User != null)
                                            {
                                                @($"{post.User.FirstName} {post.User.LastName}")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Unknown User</span>
                                            }
                                        </h5>
                                        <small class="text-muted">@post.PostedAt.ToString("dd MMMM yyyy HH:mm")</small>
                                    </div>
                                    <div class="post-card-body">
                                        <p>@post.Content</p>
                                        <!-- media -->
                                        @if (!string.IsNullOrEmpty(post.Media))
                                        {
                                            <!-- imagini -->
                                            @if (post.Media.EndsWith(".jpg") || post.Media.EndsWith(".jpeg") || post.Media.EndsWith(".png") || post.Media.EndsWith(".gif"))
                                            {
                                                <div class="text-center mb-3">
                                                    <img src="@post.Media" alt="Post Image" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;">
                                                </div>
                                            }
                                            <!-- video -->
                                            @if (post.Media.EndsWith(".mp4") || post.Media.EndsWith(".mov") || post.Media.EndsWith(".avi"))
                                            {
                                                <div class="text-center mb-3">
                                                    <video controls class="w-100 rounded">
                                                        <source src="@post.Media" type="video/mp4">
                                                        Your browser does not support the video tag.
                                                    </video>
                                                </div>
                                            }
                                        }
                                    </div>
                                    <div class="post-footer">
                                        <div class="post-actions d-flex justify-content-between align-items-center">
                                            <!-- buton de editare -->
                                            <a class="btn btn-sm btn-warning" href="/Posts/Edit/@post.Id">Edit Post</a>
                                            <!-- nr comentarii -->
                                            <a class="text-decoration-underline text-info" href="/Posts/Show/@post.Id">@post.Comments.Count() comments</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>This user has not posted anything yet.</p>
                }
            </div>
        }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
