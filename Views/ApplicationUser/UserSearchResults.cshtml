@model IEnumerable<Connectify.Models.ApplicationUser>

<div class="list-group">
    @if (Model != null && Model.Any())
    {
        foreach (var user in Model)
        {
            <a href="/ApplicationUser/Show/@user.Id" class="list-group-item list-group-item-action d-flex align-items-center">
                
                <div class="flex-grow-1">
                    <h6 class="mb-0">@user.FirstName @user.LastName</h6>
                    
                </div>
            </a>
        }
    }
    else
    {
        <div class="list-group-item text-center text-muted">
            No users found.
        </div>
    }
</div>
